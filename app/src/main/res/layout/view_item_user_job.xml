<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Job Name -->
        <TextView
            android:id="@+id/jobNameUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Job Name"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#000000"/>


        <!-- Address -->
        <TextView
            android:id="@+id/jobAddressUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Job Address"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/jobNameUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="8dp"
            android:textColor="#777777"/>

        <!-- Status -->
        <TextView
            android:id="@+id/jobStatusUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/jobAddressUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="8dp"
            android:textColor="#4CAF50"/> <!-- Green for approved status -->

        <!-- Duration -->
        <TextView
            android:id="@+id/DurationJobUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Duration: 4 hours"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/jobStatusUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="8dp"
            android:textColor="#FF9800"/> <!-- Orange for duration -->

        <!-- Price -->
        <TextView
            android:id="@+id/PriceJobUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price: $300"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/DurationJobUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="8dp"
            android:textColor="#F44336"/> <!-- Red for price -->

        <!-- View Applicants Button -->
        <Button
            android:id="@+id/DetailOwnerJob_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Detail"
            app:layout_constraintTop_toBottomOf="@id/PriceJobUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
