<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_left" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Job and Confirm Payment"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/red15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:text="8V2W+HJV, Tan Hung, Soc Son, Ha..."
                        android:textSize="14sp"
                        android:textColor="@color/grey20" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Job Name -->
        <EditText
            android:id="@+id/edtJobName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Name" />

        <!-- Tabs for Days -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7"
            android:paddingBottom="8dp">

            <EditText
                android:id="@+id/dateEditText"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="Enter Date" />
        </LinearLayout>

        <!-- Start Time Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Start Time"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/timeEditText"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:text="08" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":" />

            <EditText
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:text="00" />
        </LinearLayout>

        <!-- Duration Radio Group -->
        <RadioGroup
            android:id="@+id/rgDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbTwoHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours - Time to complete the job" />

            <RadioButton
                android:id="@+id/rbThreeHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 hours - Time to complete the job" />

            <RadioButton
                android:id="@+id/rbFourHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 hours - Time to complete the job" />
        </RadioGroup>

        <!-- Job Price -->
        <EditText
            android:id="@+id/edtJobPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Job Price" />

        <!-- Total Price with VAT -->
        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total (including VAT):"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Notes for Job -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes for JobLinker"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/edtJobDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your notes..."
            android:background="@drawable/background_linear"
            android:minLines="3" />

        <!-- Payment Rules and Total Amount -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rules for Package Cancellation and Refund"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JobLink supports one of the two refund methods below" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Refund via bPay: JobLink will refund the total amount of unused sessions."
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Bank transfer refund: JobLink will refund the total amount of unused sessions minus 20% of the initial package value."
            android:layout_marginStart="16dp" />

        <!-- Create Job Button -->
        <Button
            android:id="@+id/btnCreateJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Job"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
